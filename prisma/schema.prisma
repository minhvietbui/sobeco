model Type {
  id Int @id @default(autoincrement())
  title  String @unique
  products Product[]
}

model Product {
  id Int @id @default(autoincrement())
  name String
  content String
  typeId Int
  type Type @relation(fields: [typeId], references: [id])
  color String
  capacity String
  properties String
  retain String
  cover String
  imageUrl String
}